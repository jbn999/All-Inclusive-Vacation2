---
const { title, description, heroImage } = Astro.props;
---

<style define:vars={{ heroImage }}>
    .hero-section {
    background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.5)), var(--heroImage);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    color:white;
    width: 100%;
    height: 75svh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    }

    .hero-text {
    display:flex;
    flex-direction: column;
    width: 50%;
    height: 90%;
    justify-content: center;
    align-items: center;
    }

    .primary-nav {
    display: flex;
    justify-content: end;
    align-items: center;
    width: 100%;
    }

    .primary-nav li {
    list-style: none;
    margin-right: 2rem;
    }

    .primary-nav a {
    text-decoration: none;
    color: white;
    }
</style>


<header>
    <section aria-label="hero-section " class="hero-section">
 
        <nav class="primary-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/blog">Blog</a></li>
            <li><a href="#">Destinations</a></li>
            <li><a href="/about">About Us</a></li>
            <li><a href="#">Contact</a></li>
        </nav>
        <div class="hero-text">
          <h1>{title}</h1>
          <p>{description}</p>
          </div>
      </section>
</header>